<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="378dp"
            android:layout_height="173dp"
            android:layout_gravity="center|fill"
            app:srcCompat="@drawable/icon" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Raspberry IP Address" />

        <EditText
            android:id="@+id/ipAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="192.168.1.28:21567" />

        <TextView
            android:id="@+id/carDetection"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/red"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:gravity="center"
            android:text="Provided is a live photo of the vehicle detected. Please choose how you would like to proceed."
            android:textColor="@color/black"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/car"
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:layout_gravity="center|fill"
            app:srcCompat="@drawable/bmw" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/approve"
                android:layout_width="122dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:background="#39e600"
                android:text="Approve" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="9dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/deny"
                android:layout_width="122dp"
                android:layout_height="26dp"
                android:layout_weight="1"
                android:background="#cc0000"
                android:text="Deny" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>